<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F5F7FB"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_qr_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR Type: Scanned/Generated"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <!-- QR Content -->
    <TextView
        android:id="@+id/tv_qr_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QR Code content will appear here"
        android:textSize="18sp"
        android:textColor="#333"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <!-- Timestamp -->
    <TextView
        android:id="@+id/tv_qr_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timestamp will appear here"
        android:textSize="16sp"
        android:textColor="#777"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <!-- Back Button -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_bg"
        android:textColor="@android:color/white"
        android:layout_gravity="center"/>

</LinearLayout>
